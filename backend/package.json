{
  "name": "f1-predictions-backend",
  "version": "1.0.0",
  "description": "Backend do sistema de palpites de corridas de F1",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node src/db/migrate.js",
